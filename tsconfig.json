{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node", // must be set because of module: "es2015" which will default resolution to "classic".
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/**/*", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
